{
  "name": "izy-transfer",
  "version": "1.0.0",
  "description": "Transfer files easily between devices",
  "main": "./src/js/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^26.0.12",
    "electron-reloader": "^1.2.3"
  },
  "dependencies": {
    "express": "^5.1.0",
    "qrcode": "^1.5.4"
  },
  "build": {
    "appId": "com.izytransfer.app",
    "productName": "Izy Transfer",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "src/assets/logo.icns",
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/assets/logo.ico"
    },
    "files": [
      "src/**/*",
      "package.json"
    ]
  }
}